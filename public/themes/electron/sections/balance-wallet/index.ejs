<%
let area = 'balance-wallet';
let title = "Balance";
let thumbnail = "Balance / index";
let selling = 0;
let buy_again = 0;

let attr = {class: 'i-checks'};
let hide = {type: "checkbox", text: '',name: 'hide', value: {}, attr: attr};

let arrElements = {
    status : ['Hide', hide],
};
%>
<template class="task-template">
    <section id="<%- area %>-index-section" class="section js-section u-category-<%- area %>-index">
        <div class="bg-white p-l-25">
            <%- include('./../partial/header', {title: title, thumbnail: thumbnail}) %>
        </div>
        <div class="section-wrapper">
            <form role="form" class="form-inline zt-form" id="zt-form" action="" method="post">
                <%
                    let accountData = {};
                    accountData['empty'] = "Empty Account!!!";

                    let account = 
                    `<select name="user_key_id" class="form-control account m-r-10">
                        ${
                            Object.keys(accountData).map((e, i)=>{
                                let selected = '';
                                return `<option ${selected} value="${e}">${accountData[e]}</option>`;
                            })
                        }
                    </select>`;
                %>
                <div class="row" id="sortable1">
                    <div class="col-lg-12 ui-sortable connectedSortable">
                        <div class="ibox float-e-margins">

                            <div class="ibox-content">
                                <div class="form-group table-trade">
                                    <label class="control-label text-14">Information</label>
                                    <div class="input-label account-api">
                                        <%- account %>
                                        <button class="btn btn-primary select-action get-balance m-t-4" type="button">Get Balance</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            <div class="row">
                <div class="col-lg-12 ui-sortable connectedSortable">
                    <div class="ibox float-e-margins">
                        <div class="ibox-content">
                            <div class="small-balance m-btm-15 hidden">
                                <div class="text dis-inblock m-r-5"><span>Hide</span></div>
                                <div class="input dis-inblock">
                                    <input type="checkbox" class="i-checks"/>
                                </div>
                            </div>
                            <div class="table-block">
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <script type="text/javascript">var area = "<%-area;%>"; var type = "index"; var area_action = `${area}-${type}`;</script>
        <script type="text/javascript" src='./renderer-process/<%- area %>/js-index.js'></script>
    </section>
</template>